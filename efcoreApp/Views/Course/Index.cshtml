@model List<Course>
<a class="btn btn-primary my-3" asp-controller="Course" asp-action="Create">Add New Course</a>

<table class="table">

    <thead>
        <tr>
            <th>Course Id</th>

            <th>Course Name</th>
            <th>Operations</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CourseId</td>
                <td>@item.CourseTitle</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-controller="Course" asp-action="Edit" asp-route-id="@item.CourseId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-controller="Course" asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>
                </td>
            </tr>
        }

    </tbody>

</table>